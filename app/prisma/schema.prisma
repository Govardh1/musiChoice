generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user{
  id        String @id @default(uuid())
  email      String @unique
  provider   Provider
  role       Role 
  streams     Stream[]
  upvotes    Upvote[]
}

model Stream{
  id          String @id @default(uuid())
  type        StreamType
  avtive      Boolean @default(true)
  userId      String
  user        user @relation(fields: [userId],references: [id])
  uptvotes      Upvote[]
  url   String
  extractedId   String
}

model Upvote{
  id          String @id @default(uuid())
  userId        String
  streamId    String
  user        user @relation(fields: [userId],references: [id])
  stream      Stream @relation(fields: [streamId],references: [id])
  @@unique([userId,streamId])
}

enum StreamType{
Spotify
Youtube
}
enum Role{
  Streamer
  EndUser
}
enum Provider{
  Google
}
